{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@models/*": ["./models/*"],
      "@/*": ["./*"]
    },
  },
  "include": ["src"]
}